
@{
    ViewBag.Title = "UrunGuncelle";
}

@using StokTakip.Models

<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">

                <span class="caption-subject font-red-sunglo bold uppercase">ÜRÜN GÜNCELLEME SAYFASI</span>

            </div>
        </div>

        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Urun/UrunGuncelle" class="form-horizontal" method="post" role="form">
              
                <input type="hidden" name="UrunID" value="@Model.UrunID" />
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Ürün Adı</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="UrunAdi" value="@Model.UrunAdi">
                       
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Marka</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="Marka" value="@Model.Marka">


                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Model</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="Model" value="@Model.Model">
                          
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Seri No</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="SeriNo" value="@Model.SeriNo">
                          
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Firma</label>
                        <div class="col-md-4">
                            @*<div class="form-group">*@

                            <select class="form-control" name="FirmaID">
                                @foreach (Firma frm in ViewBag.Firma)
                                {
                                    <option value="@frm.FirmaID">@frm.FirmaAdi</option>
                                }
                            </select>
                            @*</div>*@

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Fiyat</label>
                        <div class="col-md-4">
                            <input type="number" class="form-control" name="Fiyat" value="@Model.Fiyat">
                            
                        </div>

                    </div>
                  

                    <div class="form-group">
                        <label class="col-md-3 control-label">Kategori Adı</label>
                        <div class="col-md-4">

                            @Html.DropDownList("Kategori", ViewBag.KategoriListesi as SelectList, "---Kategori Seçiniz---", new { @style = "width: 400px" })

                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Alt Kategori Adı</label>
                        <div class="col-md-4">

                            @Html.DropDownList("AltKategoriID", Enumerable.Empty<SelectListItem>(), "---AltKategori Seçiniz---", new { @style = "width: 400px" })

                        </div>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Ürün Alım Tarihi</label>
                        <div class="col-md-4">
                            <div class="input-group date date-picker" data-date-format="dd-mm-yyyy">
                                <input type="date" class="form-control" name="UrunAlimTarihi" value="@Model.UrunAlimTarihi">
                              
                                <span class="input-group-btn">
                                    <button class="btn default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Garanti Bitiş Tarihi</label>
                        <div class="col-md-4">
                            <div class="input-group date date-picker" data-date-format="dd-mm-yyyy">
                                <input type="date" class="form-control" @*readonly*@ name="GarantiBitişTarihi" value="@Model.GarantiBitisTarihi">
                              
                                <span class="input-group-btn">
                                    <button class="btn default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3"> Garanti Uyarı Tarihi</label>
                        <div class="col-md-4">
                            <div class="input-group date date-picker" data-date-format="dd-mm-yyyy">
                                <input type="date" class="form-control" @*readonly*@ name="GarantiUyarıTarihi">
                                
                                <span class="input-group-btn">
                                    <button class="btn default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Lisans Bitiş Tarihi</label>
                        <div class="col-md-4">
                            <div class="input-group date date-picker" data-date-format="dd-mm-yyyy">
                                <input type="date" class="form-control" @*readonly*@ name="LisansBitisTarihi">
                              
                                <span class="input-group-btn">
                                    <button class="btn default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3"> Lisans Uyarı Tarihi</label>
                        <div class="col-md-4">
                            <div class="input-group date date-picker" data-date-format="dd-mm-yyyy">
                                <input type="date" class="form-control" @*readonly*@ name="LisansUyarıTarihi">
                              
                                <span class="input-group-btn">
                                    <button class="btn default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Güncelle</button>

                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>
    </div>
</div>

@section  scripts{

    <script type="text/javascript">
        $(document).ready(function () {

            // Kategori seçildiğinde bu fonksiyonumuz çalışmaya başlayacaktır.
            $('#Kategori').change(function () {

                $('#AltKategoriID').empty();

                // Seçilen Kategorinin ID sini alıyoruz.
                var KategoriID = $(this).val();

  
                if (KategoriID != null && KategoriID != '') {
                    $.ajax({
                        type: "get",
                        url: '@Url.Action("AltKategoriGetir", "Urun")',
                        data: { KategoriID: KategoriID },
                        success: function (altkategoriler) {

                            $.each(altkategoriler, function (AltKategoriID, AltKategori) {
                                $('#AltKategoriID').append($('<option/>', {
                                    value: AltKategori.AltKategoriID,
                                    text: AltKategori.AltKategoriAdi
                                }));
                            });

                        },
                        error: function () {
                            /*Bu metod ile Ajax işlemi başarısız
                            olursa eğer hata mesajı verebiliyoruz.*/
                            alert("Hata");
                        },
                        beforeSend: function () {
                            /*Burada ise Form Post edilmeden önce
                            işlemler yapılabilir.Örnek olarak Loading, yükleniyor vs..*/
                        },
                        complete: function () {
                            /*Burada ise Form Post edildikten sonra
                            işlemler yapılabilir.Örnek olarak yükleme tamamlandı vs..*/
                        }
                    });
                }
            });
        });
    </script>

}