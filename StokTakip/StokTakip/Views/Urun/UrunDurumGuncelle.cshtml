
@{
    ViewBag.Title = "UrunDurumGuncelle";
}

@using StokTakip.Models

<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">

                <span class="caption-subject font-red-sunglo bold uppercase">ÜRÜN DURUM GÜNCELLEME SAYFASI</span>

            </div>
        </div>

        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Urun/UrunDurumGuncelle" class="form-horizontal" method="post" role="form">
                <input type="hidden" name="DurumID" value="@Model.DurumID" />
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Ürün Adı</label>
                        <div class="col-md-4">
                            @*<div class="form-group">*@

                            <select class="form-control" name="UrunID">
                                @foreach (Urun u in ViewBag.Urun)
                                {
                                    <option value="@u.UrunID">@u.UrunAdi</option>
                                }
                            </select>
                            @*</div>*@

                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Marka</label>
                        <div class="col-md-4">
                            @*<div class="form-group">*@

                            <select class="form-control" name="UrunID">
                                @foreach (Urun u in ViewBag.Urun)
                                {
                                    <option value="@u.UrunID">@u.Marka</option>
                                }
                            </select>
                            @*</div>*@

                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Model</label>
                        <div class="col-md-4">
                            @*<div class="form-group">*@

                            <select class="form-control" name="UrunID">
                                @foreach (Urun u in ViewBag.Urun)
                                {
                                    <option value="@u.UrunID">@u.Model</option>
                                }
                            </select>
                            @*</div>*@

                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Ürün Durumu</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="UrunDurumu" value="@Model.UrunDurumu">

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Açıklama</label>
                        <div class="col-md-4">
                            <textarea class="form-control" name="Aciklama" rows="3" value="@Model.Aciklama"></textarea>

                        </div>

                    </div>



                    <div class="form-group">
                        <label class="control-label col-md-3">Hareket Tarihi</label>
                        <div class="col-md-4">
                            <div class="input-group date date-picker" data-date-format="dd-mm-yyyy">
                                <input type="date" class="form-control" @*readonly*@ name="HareketTarihi" value="@Model.HareketTarihi">
                                <span class="input-group-btn">
                                    <button class="btn default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>

                        </div>
                    </div>




                </div>
        </div>
        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn green">Ekle</button>

                </div>
            </div>
        </div>
        </form>

    </div>
</div>