
@{
    ViewBag.Title = "UrunStok";
}

@using StokTakip.Models
@model List<Stok>


<div class="row">
    <div class="col-md-12">

        <div class="portlet">
            <div class="portlet-title">
                <div class="caption font-dark">

                    <span class="caption-subject bold uppercase">ÜRÜN STOK</span>
                </div>
                @using (Html.BeginForm("UrunStok", "Urun", FormMethod.Get))
                {



                    <div class="col-md-4" style="float:right; margin:5px auto">
                        <div class="input-group">
                            <span class="input-group-btn btn-left">
                                <input class="btn red-soft" type="submit"  value="Search">
                                <i class="fa fa-search"></i>

                            </span>
                            <div class="input-group-control">
                                <input type="text" class="form-control edited" name="Search" style="width:360px" placeholder="Listelenecek Stok Bilgisi Girin" />
                            </div>
                        </div>
                    </div>

                }
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/Urun/UrunStokEkle" id="sample_editable_1_new" class="btn sbold green">
                                    Yeni Stok
                                    <i class="fa fa-plus"></i>
                                </a>
                                
                            </div>
                            <div class="btn-group">
                                
                                <a href="/Urun/UrunStokAzalt" id="sample_editable_1_new" class="btn sbold green">Stok Azalt</a>
                                
                            </div>
                            <div class="btn-group">
                                
                                <a href="/Urun/UrunStokArtir" id="sample_editable_1_new" class="btn sbold green">Stok Artır</a>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <a href="/Urun/UrunStokPDF" id="sample_editable_1_new" class="btn sbold green">PDF AL</a>

                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                    <thead>
                        <tr>
                            
                            <th>ID</th>
                            <th>Ürün Adı</th>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Stok Adedi</th>
                            <th>Birim</th>
                            <th>Ürün Kaydı Yapan</th>
                            <th>Depo</th>
                            <th>Raf Adı</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Stok s in Model)
                        {
                            <tr class="odd gradeX">
                               

                                <td>@s.StokID</td>
                                @if (s.Urun == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@s.Urun.UrunAdi</td>
                                }
                                @if (s.Urun == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@s.Urun.Marka</td>
                                }
                                @if (s.Urun == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@s.Urun.Model</td>
                                }
                                <td>
                                    @s.StokAdet
                                @if (s.StokAdet <= 10)
                                {
                                    <span class="badge badge-danger"><i class="fa fa-exclamation"> Stok Az</i> </span>
                                }
                            </td>

                                @if (s.Birim == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@s.Birim.BirimAdi</td>
                                }
                                <td>@s.StokKayitYapan</td>
                                @if (s.Raf == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@s.Raf.Depo.DepoAdi</td>
                                }
                                @if (s.Raf == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@s.Raf.RafAdi</td>
                                }
                                <td><a href="/Urun/UrunStokGuncelle/@s.StokID" class="btn btn-outline btn-circle btn-sm purple"><i class="fa fa-edit"></i> Güncelle </a></td>
                                <td><a href="/Urun/UrunStokSil/@s.StokID" class="btn btn-outline btn-circle dark btn-sm black"><i class="fa fa-trash-o"></i> Sil </a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


