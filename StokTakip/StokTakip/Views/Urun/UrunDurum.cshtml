
@{
    ViewBag.Title = "UrunDurum";
}

@using StokTakip.Models
@model List<UrunDurum>


<div class="row">
    <div class="col-md-12">

        <div class="portlet">
            <div class="portlet-title">
                <div class="caption font-dark">

                    <span class="caption-subject bold uppercase">ÜRÜN DURUM</span>
                </div>
                @using (Html.BeginForm("UrunDurum", "Urun", FormMethod.Get))
                {



                    <div class="col-md-4" style="float:right; margin:5px auto">
                        <div class="input-group">
                            <span class="input-group-btn btn-left">
                                <input class="btn red-soft" type="submit"  value="Search">
                                <i class="fa fa-search"></i>

                            </span>
                            <div class="input-group-control">
                                <input type="text" class="form-control edited" name="Search" style="width:360px" placeholder="Listelenecek Urun Bilgisi Girin" />
                            </div>
                        </div>
                    </div>

                }
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/Urun/UrunDurumEkle" id="sample_editable_1_new" class="btn sbold green">
                                    Yeni Durum
                                    <i class="fa fa-plus"></i>
                                </a>

                            </div>
                        
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <a href="/Urun/UrunDurumPDF" id="sample_editable_1_new" class="btn sbold green">PDF AL</a>

                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                    <thead>
                        <tr>
                            
                            <th>ID</th>
                            <th>Ürün Adı</th>
                            <th>Marka</th>
                            <th>Model</th>
                         
                            <th>Ürün Durumu</th>
                            <th>Açıklama</th>
                            <th>Hareket Tarihi</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UrunDurum h in Model)
                        {
                            <tr class="odd gradeX">
                                

                                <td>@h.DurumID</td>
                                @if (h.Urun == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@h.Urun.UrunAdi</td>
                                }
                                @if (h.Urun == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@h.Urun.Marka</td>
                                }
                                @if (h.Urun == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@h.Urun.Model</td>
                                }
                               
                                <td>@h.UrunDurumu</td>
                                <td>@h.Aciklama</td>
                                <td>@String.Format("{0:dd/MM/yyyy}", h.HareketTarihi)</td>
                                
                                
                                <td><a href="/Urun/UrunDurumGuncelle/@h.DurumID" class="btn btn-outline btn-circle btn-sm purple"><i class="fa fa-edit"></i> Güncelle </a></td>
                                <td><a href="/Urun/UrunDurumSil/@h.DurumID" class="btn btn-outline btn-circle dark btn-sm black"><i class="fa fa-trash-o"></i> Sil </a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

