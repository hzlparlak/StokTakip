
@{
    ViewBag.Title = "UrunStokAzalt";
}

@using StokTakip.Models

<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">

                <span class="caption-subject font-red-sunglo bold uppercase">ÜRÜN STOK AZALTMA SAYFASI</span>

            </div>
        </div>

        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Urun/UrunStokAzalt" class="form-horizontal" method="post" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Ürün Adı</label>
                        <div class="col-md-4">
                            @*<div class="form-group">*@

                            <select class="form-control" name="StokID">
                                @foreach (Stok ktg in ViewBag.Stok)
                                {
                                    <option value="@ktg.StokID">@ktg.StokID</option>
                                }
                            </select>
                            @*</div>*@

                        </div>

                    </div>
                 
                    <div class="form-group">
                        <label class="col-md-3 control-label">Silinecek Ürün Sayısı</label>
                        <div class="col-md-4">
                            <input type="number" class="form-control" name="SilinmisUrunSayisi" placeholder="Silinecek ürün sayısı giriniz">

                        </div>

                    </div>

                   
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Azalt</button>

                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>
    </div>
</div>
