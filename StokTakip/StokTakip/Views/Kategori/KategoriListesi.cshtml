
@{
    ViewBag.Title = "KategoriListesi";
}

@using StokTakip.Models
@model List<AltKategori>

<div class="row">
    <div class="col-md-12">

        <div class="portlet">
            <div class="portlet-title">
                <div class="caption font-dark">

                    <span class="caption-subject bold uppercase">KATEGORİ LİSTESİ</span>
                </div>
                @using (Html.BeginForm("KategoriListesi", "Kategori", FormMethod.Get))
                {



                    <div class="col-md-4" style="float:right; margin:5px auto">
                        <div class="input-group">
                            <span class="input-group-btn btn-left">
                                <input class="btn red-soft" type="submit"  value="Search">
                                <i class="fa fa-search"></i>

                            </span>
                            <div class="input-group-control">
                                <input type="text" class="form-control edited" name="Search" style="width:360px" placeholder="Listelenecek Kategori Girin" />
                            </div>
                        </div>
                    </div>

                }
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                           
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <a href="/Kategori/KategoriListesiPDF" id="sample_editable_1_new" class="btn sbold green">PDF AL</a>

                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                    <thead>
                        <tr>
                            
                            <th>Kategori Adı</th>
                            <th>Alt Kategori Adı</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (AltKategori ktg in Model)
                        {
                            <tr class="odd gradeX">
                                
                                <td>@ktg.Kategori.KategoriAdi</td>
                                <td>@ktg.AltKategoriAdi</td>
                                

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

