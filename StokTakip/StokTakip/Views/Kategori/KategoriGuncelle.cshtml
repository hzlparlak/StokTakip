
@{
    ViewBag.Title = "KategoriGuncelle";
}

@using StokTakip.Models

<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">

                <span class="caption-subject font-red-sunglo bold uppercase">KATEGORİ GÜNCELLEME SAYFASI</span>

            </div>
        </div>


        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Kategori/KategoriGuncelle" class="form-horizontal" method="post" role="form">
                <input type="hidden" name="KategoriID" value="@Model.KategoriID" />
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Kategori Adı</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="KategoriAdi" value="@Model.KategoriAdi">

                        </div>
                    </div>

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Ekle</button>

                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>
    </div>
</div>

