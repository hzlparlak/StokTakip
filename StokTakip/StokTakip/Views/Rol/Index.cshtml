
@{
    ViewBag.Title = "Roller";
}


@model List<string>


<div class="row">
    <div class="col-md-12">

        <div class="portlet">
            <div class="portlet-title">
                <div class="caption font-dark">

                    <span class="caption-subject bold uppercase">ROLLER</span>
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/Rol/Ekle" id="sample_editable_1_new" class="btn sbold green">
                                    Yeni Rol
                                    <i class="fa fa-plus"></i>
                                </a>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <a href="/Rol/RolPDF" id="sample_editable_1_new" class="btn sbold green">PDF AL</a>

                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                    <thead>
                        <tr>
                            
                            <th>Rol Adı</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (string rol in Model)
                        {
                            <tr class="odd gradeX">
                                

                                <td>@rol</td> 
                                
                                <td><a href="/Rol/Sil/@rol" class="btn btn-outline btn-circle dark btn-sm black"><i class="fa fa-trash-o"></i> Sil </a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


