
@{
    ViewBag.Title = "Rol Ekle";
}

<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">

                <span class="caption-subject font-red-sunglo bold uppercase">ROL EKLEME SAYFASI</span>

            </div>
        </div>

        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Rol/Ekle" class="form-horizontal" method="post" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Rol Adı</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="RolAdi" placeholder="Rol Adı Giriniz">

                        </div>
                    </div>
                    


                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Ekle</button>

                        </div>
                    </div>
                </div>
            </form>
          
        </div>
    </div>
</div>
