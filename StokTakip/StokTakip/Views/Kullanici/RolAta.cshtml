
@{
    ViewBag.Title = "RolAta";
}

<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">

                <span class="caption-subject font-red-sunglo bold uppercase">ROL ATAMA SAYFASI</span>

            </div>
        </div>

        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Kullanici/RolAta" class="form-horizontal" method="post" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Kullanıcı Adı</label>
                        <div class="col-md-4">
                            @*<div class="form-group">*@

                            <select class="form-control" name="KullaniciAdi">
                                @foreach (MembershipUser mu in ViewBag.Kullanicilar)
                                {
                                    <option value="@mu.UserName">@mu.UserName</option>
                                }
                            </select>
                            @*</div>*@

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Rol Adı</label>
                        <div class="col-md-4">
                            @*<div class="form-group">*@

                            <select class="form-control" name="RolAdi">
                                @foreach (string rol in ViewBag.Roller)
                                {
                                    <option value="@rol">@rol</option>
                                }
                            </select>
                            @*</div>*@

                        </div>

                    </div>

                    


                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Ekle</button>

                        </div>
                    </div>
                </div>
            </form>
           
        </div>
    </div>
</div>

