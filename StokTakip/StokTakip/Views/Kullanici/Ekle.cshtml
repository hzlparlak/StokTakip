
@{
    ViewBag.Title = "Yeni Üye";
}

@section head{
    <style>
        #hata {
            color: red;
            font-size: 16px;
        }
    </style>
}

<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">

                <span class="caption-subject font-red-sunglo bold uppercase">YENİ ÜYE EKLEME SAYFASI</span>

            </div>
        </div>

        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="/Kullanici/Ekle" class="form-horizontal" method="post" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Kullanıcı Adı</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="KullaniciAdi" placeholder="Kullanıcı Adı Giriniz">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Şifre</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="Sifre" placeholder="Şifre Giriniz" min="3">

                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">E-mail</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="Email" placeholder="E-mail Giriniz">

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Gizli Soru</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="GizliSoru" placeholder="Gizli Soru Giriniz">

                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Gizli Cevap</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="GizliCevap" placeholder="Gizli Cevap Giriniz">

                        </div>

                    </div>
                    

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Ekle</button>

                        </div>
                    </div>
                </div>
            </form>
            <span id="hata">@ViewBag.Mesaj</span>
        </div>
    </div>
</div>

