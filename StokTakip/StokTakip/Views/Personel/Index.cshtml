
@{
    ViewBag.Title = "Personeller";
}

@using StokTakip.Models
@model List<Personel>


    <div class="row">
        <div class="col-md-12">
            
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        
                        <span class="caption-subject bold uppercase">PERSONELLER</span>
                    </div>
                    @using (Html.BeginForm("Index", "Personel", FormMethod.Get))
                    {



                        <div class="col-md-4" style="float:right; margin:5px auto">
                            <div class="input-group">
                                <span class="input-group-btn btn-left">
                                    <input class="btn red-soft" type="submit"  value="Search">
                                    <i class="fa fa-search"></i>

                                </span>
                                <div class="input-group-control">
                                    <input type="text" class="form-control edited" name="Search" style="width:360px" placeholder="Listelenecek Personel Girin" />
                                </div>
                            </div>
                        </div>

                    }
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <a href="/Personel/PersonelEkle" id="sample_editable_1_new" class="btn sbold green">
                                        Yeni Personel
                                        <i class="fa fa-plus"></i>
                                    </a>
                                    @*<button id="sample_editable_1_new" class="btn sbold green">
                        Yeni Personel
                        <i class="fa fa-plus"></i>
                    </button>*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="btn-group pull-right">
                                    <a href="/Personel/PersonelPDF" id="sample_editable_1_new" class="btn sbold green">PDF AL</a>
                                   

                                </div>
                            </div>
                           
                        </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                        <thead>
                            <tr>
                                
                                <th>ID</th>
                                <th>Personel Adı</th>
                                <th>Personel Soyadı</th>
                                <th>TC No</th>
                                <th>Cinsiyet</th>
                                <th>Doğum Tarihi</th>
                                <th>Adres</th>
                                <th>Telefon</th>
                                <th>Email</th>
                                <th>Kayıt Tarihi</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (Personel p in Model)
                           {
                            <tr class="odd gradeX">
                                
                                
                                <td>@p.PersonelID</td>
                                
                                <td>
                                    <span class="label label-sm label-warning">@p.PersonelAd</span></td>
                                <td>
                                    <span class="label label-sm label-warning">@p.PersonelSoyad</span>
                                </td>
                                <td>@p.TcNo</td>
                                <td>@p.Cinsiyet</td>
                                <td>@String.Format("{0:dd/MM/yyyy}", p.DogumTarih)</td>
                                <td>@p.PersonelAdres</td>
                                <td>@p.PersonelTelefon</td>
                                <td>@p.Email</td>
                                <td>@String.Format("{0:dd/MM/yyyy}",p.KayitTarih)</td>
                                <td><a href="/Personel/PersonelSil/@p.PersonelID" class="btn btn-outline btn-circle dark btn-sm black"><i class="fa fa-trash-o"></i> Sil </a></td>
                                <td><a href="/Personel/PersonelGuncelle/@p.PersonelID" class="btn btn-outline btn-circle btn-sm purple"><i class="fa fa-edit"></i> Güncelle </a></td>
                            </tr>
                           }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
       


