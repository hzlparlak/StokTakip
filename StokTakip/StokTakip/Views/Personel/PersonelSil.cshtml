
@{
    ViewBag.Title = "PersonelSil";
}
@using StokTakip.Models
@model Personel

<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">

                <span class="caption-subject font-red-sunglo bold uppercase">PERSONEL SİLME SAYFASI</span>

            </div>

        </div>
        
        <div class="block-content-outer">
            <div class="block-content-inner">
                <form action="/Personel/PersonelSil" method="post">
                    <input type="hidden" name="PersonelID" value="@Model.PersonelID" />
                    <label>@Model.PersonelAd Adlı Personel Silinsin Mi?</label><br />
                    <input type="submit" name="name" value="Evet" class="btn btn-success img-rounded" />
                    <a href="@Url.Action("Index","Personel")" class="btn btn-default">Hayır</a>
                </form>
            </div>
        </div>

    </div>
</div>

